        }

        .row{ /* Configuração padrão em Linha da esquerda pra direita */
            flex-direction: row;
        }

        .row-reverse{ /* Configuração de Linha invertida da direita pra esquerda */
            flex-direction: row-reverse;
        }
        
        .column{ /* Configuração de coluna */
            flex-direction: column;
        }

        .column-reverse{ /* Configuração de coluna reversa */
            flex-direction: column-reverse;
        }

